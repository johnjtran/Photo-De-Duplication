<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>catalog-service</baseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>CHANGES.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources/bin</directory>
      <outputDirectory>${target.directory}/bin</outputDirectory>
      <includes/>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources/sbin</directory>
      <outputDirectory>${target.directory}/sbin</outputDirectory>
      <includes/>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <outputDirectory>${target.directory}/logs</outputDirectory>
      <includes>
        <include>REMOVE.log</include>
      </includes>
    </fileSet>
   <fileSet>
      <directory>${basedir}/src/main/resources/etc</directory>
      <outputDirectory>${target.directory}/etc</outputDirectory>
      <includes>
        <include>**.properties</include>
        <include>**.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources/policy</directory>
      <outputDirectory>${target.directory}/policy</outputDirectory>
      <includes>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/site/apidocs</directory>
      <filtered>false</filtered>
      <outputDirectory>doc</outputDirectory>
      <excludes/>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>${target.directory}/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>true</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <unpackOptions/>
    </dependencySet>
  </dependencySets>
</assembly>
